<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="103dp"
        android:layout_height="98dp"
        android:id="@+id/calendar"
        app:srcCompat="@drawable/ic_calendaricon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="84dp"
        android:id="@+id/dog"
        app:srcCompat="@drawable/ic_animal_pet_dog_icon_13"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="111dp"
        android:layout_height="68dp"
        android:id="@+id/user"
        app:srcCompat="@drawable/ic_couple_silhouette_male_and_female_psd_8iij99_clipa"
        app:layout_constraintRight_toLeftOf="@+id/calendar"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/dog"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />

    <TextView
        android:text="TextView"
        android:layout_width="56dp"
        android:layout_height="17dp"
        android:id="@+id/calendarLabel"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/calendar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/calendar"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:layout_constraintHorizontal_bias="0.516" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dogLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dog"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dog" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLabel"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/user"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/user"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/user" />

</android.support.constraint.ConstraintLayout>
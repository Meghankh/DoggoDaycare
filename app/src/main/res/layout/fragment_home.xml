<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="103dp"
        android:layout_height="98dp"
        android:id="@+id/calendar"
        app:srcCompat="@drawable/ic_calendaricon"
        app:layout_constraintBottom_toTopOf="@+id/calendarLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="84dp"
        android:id="@+id/dog"
        app:srcCompat="@drawable/ic_animal_pet_dog_icon_13"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarLabel"
        app:layout_constraintBottom_toTopOf="@+id/dogLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="111dp"
        android:layout_height="68dp"
        android:id="@+id/user"
        app:srcCompat="@drawable/ic_couple_silhouette_male_and_female_psd_8iij99_clipa"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dogLabel"
        app:layout_constraintBottom_toTopOf="@+id/userLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarLabel"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:layout_constraintBottom_toTopOf="@+id/dog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dogLabel"
        app:layout_constraintTop_toBottomOf="@+id/dog"
        app:layout_constraintBottom_toTopOf="@+id/user"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLabel"
        app:layout_constraintTop_toBottomOf="@+id/user"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
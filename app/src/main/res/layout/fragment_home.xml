<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="103dp"
        android:layout_height="98dp"
        app:srcCompat="@drawable/ic_calendaricon"
        android:id="@+id/myStepsFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/ic_animal_pet_dog_icon_13"
        android:id="@+id/teamFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="111dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/ic_couple_silhouette_male_and_female_psd_8iij99_clipa"
        android:id="@+id/teamsRankFragment"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="101dp"
        app:layout_constraintTop_toBottomOf="@+id/myrank"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myrank"
        app:layout_constraintRight_toRightOf="@+id/teamFragment"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/teamFragment"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/teamFragment" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamrank"
        app:layout_constraintRight_toRightOf="@+id/teamsRankFragment"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/teamsRankFragment"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/teamsRankFragment" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mysteps"
        app:layout_constraintLeft_toLeftOf="@+id/myStepsFragment"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/myStepsFragment"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/myStepsFragment" />

</android.support.constraint.ConstraintLayout>